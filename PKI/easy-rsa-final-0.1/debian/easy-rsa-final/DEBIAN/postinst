#!/bin/sh
# postinst script for easy-rsa-final.
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

RSAINSTALLDIR="/usr/share/easy-rsa"
RSAUSRDIR="/opt/easy-rsa"
RSACA="${RSAUSRDIR}/pki/ca.crt"
RSAVARS="${RSAUSRDIR}/vars"

case "$1" in
    configure)

        # Create symbol link in user folder and change owner
        if [ -d $RSAUSRDIR ]; then
            if [ -d $RSAINSTALLDIR ]; then
                ln -s $RSAINSTALLDIR/* ${RSAUSRDIR}
				read -p "Enter your username: " USERNAME

                chown -R $USERNAME:$USERNAME ${RSAUSRDIR}
            else
                echo "Folder ${RSAINSTALLDIR} not exist - exiting..."
                exit 1
            fi
        else
            echo "Folder ${RSAUSRDIR} not exist - exiting.."
            exit 1
        fi

        # Init PKI and build CA
        #Создаем файл vars в корне easy-rsa
        read -p "Enter EASYRSA_REQ_COUNTRY var: " EASYRSA_REQ_COUNTRY
        read -p "Enter EASYRSA_REQ_PROVINCE var: " EASYRSA_REQ_PROVINCE
        read -p "Enter EASYRSA_REQ_CITY var: " EASYRSA_REQ_CITY
        read -p "Enter EASYRSA_REQ_ORG var: " EASYRSA_REQ_ORG
        read -p "Enter EASYRSA_REQ_EMAIL var: " EASYRSA_REQ_EMAIL
        read -p "Enter EASYRSA_REQ_OU var: " EASYRSA_REQ_OU
        cat >> /opt/easy-rsa/vars <<EOF
        set_var EASYRSA_REQ_COUNTRY $EASYRSA_REQ_COUNTRY
        set_var EASYRSA_REQ_PROVINCE $EASYRSA_REQ_PROVINCE
        set_var EASYRSA_REQ_CITY $EASYRSA_REQ_CITY
        set_var EASYRSA_REQ_ORG $EASYRSA_REQ_ORG
        set_var EASYRSA_REQ_EMAIL $EASYRSA_REQ_EMAIL
        set_var EASYRSA_REQ_OU $EASYRSA_REQ_OU
        set_var EASYRSA_ALGO "ec"
        set_var EASYRSA_DIGEST "sha512"
EOF

	cd $RSAUSRDIR
        # init PKI
        ./easyrsa init-pki
        # build certificate
        ./easyrsa build-ca

        if [ -f $RSACA ]; then
            echo "CA is created..."
            echo "Certificate:"
            cat $RSACA
            echo ""
        else
            echo "Errors in create the CA.exiting..."
            exit 1
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0

